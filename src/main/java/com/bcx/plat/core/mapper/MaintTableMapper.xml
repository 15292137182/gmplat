<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bcx.plat.core.mapper.MaintTableMapper">


    <select id="selectMaint" resultType="com.bcx.plat.core.entity.MaintTableInfo" parameterType="map">
        SELECT
            row_id,table_schema,table_ename,table_cname,desp,
            <include refid="com.bcx.plat.core.base.BaseMapper.common_columns"/>
        FROM t_db_tables
        <where>
            <if test="strArr!=null and strArr.size()!=0">
                <foreach collection="strArr" item="str" index="index" open="(" close=")" separator="or">
                    table_schema like '%${str}%' or table_ename like '%${str}%' or table_cname like '%${str}%'
                </foreach>
            </if>
        </where>
    </select>

    <select id="selectById" parameterType="String" resultType="com.bcx.plat.core.entity.MaintTableInfo">
        SELECT
              row_id,table_schema,table_ename,table_cname,desp ,
              <include refid="com.bcx.plat.core.base.BaseMapper.common_columns"/>
        FROM t_db_tables
        WHERE row_id=#{rowId}
    </select>

</mapper>
